generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  password            String
  username            String @unique
  profile             Int
  pets                Pet[]
  tasks               Task[]
  posts               Post[]
  lastActive          DateTime
  eventParticipations EventParticipation[]
  scores              Score[]
  streaks             Streak[]
  candy               Int
  totalScore          Int @default(0) // Total score for the leaderboard
  totalStreak         Int @default(0) // Total streak for the leaderboard
}

model Pet {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  emoji  String
  heart  Int
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

model Task {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  user          User   @relation(fields: [userId], references: [id])
  userId        String @db.ObjectId
  completions   DateTime[]
}

model Post {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  title                 String
  description           String
  category              PostCategory
  startTime             DateTime
  endTime               DateTime
  location              String
  userId                String @db.ObjectId
  user                  User @relation(fields: [userId], references: [id])
  eventParticipations   EventParticipation[]
}

model EventParticipation {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User @relation(fields: [userId], references: [id])
  postId String @db.ObjectId
  post   Post @relation(fields: [postId], references: [id])
}

model Score {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  value  Int
}

model Streak {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  value  Int
}

enum PostCategory {
  FITNESS
  READING_STUDY
  BREAKING_ADDICTION
}
